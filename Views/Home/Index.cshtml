
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="@Url.Content("~/images/web/cake1.jpg")" style="height: 500px; width: 100%;">
                    <div class="carousel-caption">
                        <h3>Chocolate Cake</h3>
                        <p>Ultra delicious cakes at our place</p>
                    </div>
                </div>

                <div class="item">
                    <img src="@Url.Content("~/images/web/cake2.jpg")" style="height: 500px; width: 100%;">
                    <div class="carousel-caption">
                        <h3>Pineapple Cake</h3>
                        <p>Ultra delicious cakes at our place</p>
                    </div>
                </div>

                <div class="item">
                    <img src="@Url.Content("~/images/web/cake3.jpg")" style="height: 500px; width: 100%;">
                    <div class="carousel-caption">
                        <h3>Vanilla Cake</h3>
                        <p>Ultra delicious cakes at our place</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>


